@model List<AdvertisementListDto>
<div class="container-fluid">
    @if (Model?.Count > 0)
    {
        <div class="text-end my-3 p-1">
            <a asp-controller="Application" asp-action="Create">Yeni İlan Oluştur</a>
        </div>

        <table class="table table-sm table-hover table-striped mt-3">
            <thead>
                <tr>
                    <th>İlan Adı</th>
                    <th>Oluşturulma Tarihi</th>
                    <th>Durumu</th>
                    <th>İşlem</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var advertisement in Model)
                {
                    <tr>
                        <td>@advertisement.Title</td>
                        <td>@advertisement.CreateDate.ToString("dddd, dd MMMM yyyy"))</td>
                        <td>@(advertisement.Status ? "Aktif" : "Pasif")</td>

                        <td>
                            <a asp-controller="Application" asp-action="Update" asp-route-id="@advertisement.Id">Güncelle</a>
                            <a asp-controller="Application" asp-action="Remove" asp-route-id="@advertisement.Id">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="text-end my-3 p-1">
            <a asp-controller="Application" asp-action="Create">Yeni İlan Oluştur</a>
        </div>
        <div class="mt-3 text-center-lead">
            Herhangi bir ilan bulunmamaktadır.
        </div>
    }
</div>
